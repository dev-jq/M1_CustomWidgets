<?xml version="1.0"?>
<widgets>

  <customwidgets_youtubevideo type="customwidgets/widget_youtubevideo" module="customwidgets" translate="name description">
        <name>Video Youtube</name>
        <description>Embed a Youtube video</description>
        <parameters>
            <code translate="label description">
                <visible>1</visible>
                <required>1</required>
                <label>Video Code</label>
                <type>text</type>
                <description><![CDATA[<code class="nobr">https://www.youtube.com/watch?v=<strong><em>XXXXXX</em></strong></code>]]></description>
            </code>
            <aspect_ratio translate="label">
                <visible>1</visible>
                <label>Aspect Ratio</label>
                <type>select</type>
                <value>widescreen</value>
                <values>
                    <widescreen translate="label">
                        <value>widescreen</value>
                        <label>16:9</label>
                    </widescreen>
                    <normal translate="label">
                        <value>normal</value>
                        <label>4:3</label>
                    </normal>
                </values>
            </aspect_ratio>
            <autoplay translate="label">
                <visible>1</visible>
                <label>Auto-play</label>
                <type>select</type>
                <values>
                    <default translate="label">
                        <value></value>
                        <label>No</label>
                    </default>
                    <play translate="label">
                        <value>1</value>
                        <label>Yes</label>
                    </play>
                </values>
            </autoplay>
            <loop translate="label">
                <visible>0</visible>
                <label>Loop</label>
                <type>select</type>
                <values>
                    <default translate="label">
                        <value></value>
                        <label>No</label>
                    </default>
                    <play translate="label">
                        <value>1</value>
                        <label>Yes</label>
                    </play>
                </values>
            </loop>
            <template>
              <required>1</required>
              <visible>1</visible>
              <label>Template</label>
              <type>select</type>
              <value>edirect/customwidgets/youtube.phtml</value>
              <values>
                  <default translate="label">
                      <value>edirect/customwidgets/youtube.phtml</value>
                      <label>Responsive Iframe Template</label>
                  </default>
              </values>
            </template>
        </parameters>
    </customwidgets_youtubevideo>

    <customwidgets_vimeovideo type="customwidgets/widget_vimeovideo" module="customwidgets" translate="name description">
      <name>Video Vimeo</name>
      <description>Embed a Vimeo video</description>
